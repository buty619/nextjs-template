{
  "name": "next-js-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typeCheck": "tsc --noEmit -skipLibCheck && echo ✔️ PASSED Types",
    "prettier": "prettier --list-different pages/**/*.{js,ts,tsx,jsx,scss} components/**/*.{js,ts,tsx,jsx,scss} && echo ✔️ PASSED Prettier || echo \nPlease fix code formatting by running:\nnpm run prettier:fix\n; exit 1",
    "prettier:fix": "prettier --write pages/**/*.{js,ts,tsx,jsx,scss}  components/**/*.{js,ts,tsx,jsx,scss} && prettier --write components/**/*.{js,ts,tsx,jsx,scss}",
    "lint": "eslint --ext .js,.ts,.tsx,.jsx pages/ components/ && echo '✔️ PASSED ESLint' || echo Please fix code formatting by running: npm run lint:fix",
    "lint:fix": "eslint --ext .js,.ts,.tsx,.jsx src/ --fix"
  },
  "husky": {
    "hooks": {
      "pre-push": "(npm run typeCheck && npm run prettier && npm run lint) && echo 🏠 ✔️ PUSH CHECKING PASSED ✔️ 🏠 || echo ❌ PLEASE FIX FAILING CHECKS ❌"
    }
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "next": "9.3.5",
    "next-pwa": "^3.0.2",
    "node-fetch": "^2.6.0",
    "node-sass": "^4.14.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "sass-loader": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^14.0.18",
    "@types/react": "^16.9.41",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.6",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "typescript": "^3.9.6"
  }
}
